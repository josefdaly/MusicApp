
<h1> <%= @album.name %> </h1>
<%= button_to('Remove Album', album_url(@album), method: :delete) %>
<h3> <%= @album.recording_type %> </h3>

<h2> Tracks </h2>

<ul>
  <% @album.tracks.each do |track| %>
    <li> <%= link_to track.name, track_url(track) %> </li>
  <% end %>
</ul>
<%= link_to "Add Track", new_album_track_url(@album) %>
<%= link_to "Edit Album", edit_album_url(@album) %>
<%= link_to "Back to Artist", band_url(@album.band) %>
