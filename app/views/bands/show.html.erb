<h1> <%= @band.name %> </h1>
<%= button_to('Remove Artist', band_url(@band), method: :delete) %>
<h2> Albums </h2>

<ul>
  <% @band.albums.each do |album| %>
    <li> <%= link_to album.name, album_url(album) %> </li>
  <%end%>
</ul>

<%= link_to "Add Album", new_band_album_url(@band) %>
<%= link_to "Back to Bands", bands_url %>
